{
    "name": "cloak/coverallskit",
    "description": "CoverallsKit is the library for transmitting the report of code coverage to coveralls.",
    "keywords": [
        "coveralls", "code coverage", "report", "lcov", "clover"
    ],
    "require": {
        "php": ">=5.4.0",
        "phpcollection/phpcollection": "0.4.*",
        "guzzlehttp/guzzle": "~5.1",
        "gitonomy/gitlib": "0.1.*",
        "symfony/yaml": "~2.6",
        "zendframework/zend-dom": "2.3.*",
        "zendframework/zend-config": "2.3.*",
        "zendframework/zend-console": "2.3.*",
        "eloquent/pathogen": "0.6.*"
    },
    "require-dev": {
        "jaz303/phake": "0.6.*",
        "phpspec/prophecy": "~1.3",
        "mockery/mockery": "0.9.*",
        "jasonlewis/resource-watcher": "1.1.*",
        "peridot-php/peridot": "~1.8",
        "expectation/peridot-expectation": "~1.2",
        "cloak/peridot-cloak": "~1.0",
        "codegyre/robo": "~0.4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Noritaka Horio",
            "email": "holy.shared.design@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { "coverallskit\\": "src/" }
    },
    "scripts": {
        "test": "vendor/bin/peridot --grep \"spec/*Spec.php\" -c peridot.php"
    }
}
